{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {"background": "whitesmoke"},
  "title": {
    "text": "Chart 1: Daily Cryptocurrency Returns",
    "subtitle": "Daily returns for six high marketcap cryptocurrencies source: Binance.com ",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/andrewsnowdon/andrewsnowdon.github.io/main/Crypto_data_project(ammended).csv",
    "format": {"type": "csv", "parse": {"Date": "date:'%d/%m/%Y'"}}
  },
  "selection": {
    "Cryptocurrency": {
      "type": "single",
      "fields": ["Cryptocurrency"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Bitcoin",
          "BNB",
          "Ethereum",
          "USD Coin",
          "Tether"
          
        ],
        "name": "Pick an index: "
      }
    }
  },
  "transform": [
    {"filter": {"selection": "Cryptocurrency"}},
    {
      "filter": {
        "field": "Cryptocurrency",
        "oneOf": [
          "Bitcoin",
          "Ethereum",
          "BNB",
          "USD Coin",
          "Tether"
        ]
      }
    }
  ],
  "height": 600,
  "width": 700,
  "mark": {"type": "circle"},
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "Date",
      "axis": {"grid": false}
    },
    "y": {
      "field": "Returns",
      "type": "quantitative",
      "title": "Daily Return (%)",
      "scale": {"domain": [-70, 70]},
      "axis": {"grid": false}
    },
    "color": {"field": "Cryptocurrency","type": "nominal",
      "scale": {"scheme": "inferno"},
      "title": "Cryptocurrency",
      "legend": {"orient": "top-left", "fillColor": "whitesmoke"}
    },
    "tooltip": [
      {"field": "Cryptocurrency", "title": "Cryptocurrency", "type": "ordinal"},
      {"field": "Date", "title": "Date", "type": "temporal"},
      {"field": "Returns", "title": "Return (%)", "type": "quantitative"}
    ]
  }
}
